
<%# @param post [Thredded::PostView] %>
<header>
    <%if post.user.avatar.attached? %>
        <%= image_tag main_app.url_for(post.user.avatar), alt: 'avatar', class:"rounded-circle", height:"120", width:"120" %>
    <%else%>
        <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSg6Tiu7ix5m4sH3bRK550_NoTJLhA99xzuq9IsxLbtnQEDBGNi", alt:"", class:"rounded-circle", height:"120", width:"120" %>
    <%end%>

  <h2 class="thredded--post--user"><%= user_link post.user %></h2>
  <a href="<%= post.permalink_path %>" rel="nofollow" class="thredded--link thredded--post--created-at">
    <%= time_ago post.created_at %>
  </a>
</header>
