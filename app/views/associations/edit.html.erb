<div class="container-fluid py-5 bg-light">
  <h1 class="text-center">Modifier les informations</h1>
</div>
<%= form_for @association do |f| %>
<div class="container mt-n5">
  <div class="row">
    <div class="col-md-2 text-center">
      <img class="rounded-circle" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSnybl2dND6AAjhk2HYuG9m8-Wt-jsPWnil6A89n1F7uMGEZ3b2" alt="" width="150" height="150">
      <a href="" class="btn btn-outline-primary">Changer logo (NA)</a>
    </div>
    <div class="col-md-8 text-center text-md-left">
      <h2> <%= f.text_field :name %> (*) </h2>
      <p>Slogan ou courte description de l'asso à ajouter par la suite</p>
      <%= label_tag 'Le numéro du registre RNA : '%>
      <%= f.text_field  :num_rna  %> (*)
    </div>
  </div>

<div class="row py-3">
  <div class="col py-3 text-center">
    <h2 class="pb-3">
      Description : (*)
    </h2>
    <p> <%= f.text_area :description, class: 'w-75' %> </p>
  </div>
</div>
</div>

<div class="container-fluid bg-light py-3">
    <div class="container">
    <div class="row text-center">
      <div class="col py-3">
        <h2>
          Contacts :
        </h2>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="col-md-3">
        <%= label_tag "Siège social : (*)" %>
        <%= f.text_field :location %>
        <%= label_tag "Code postal : (*)" %>
        <%= f.text_field :zip_code%>
      </div>
    <div class="col-md-3">
      <%= label_tag "Site internet : " %>
      <%= f.text_field :website %>
      <%= label_tag "Page Facebook : " %>
      <%= f.text_field :fb_website%>
    </div>
  </div>
  </div>
  </div>

  <div class="container">
  <div class="row py-3">
    <div class="col text-center">
      <h2 class="py-3"> Soutenir l'association : </h2>
      <%= label_tag "Description (2 lignes) pour les dons : " %> <br>
      Description pour le Don à renseigner ici
      <br>
      <%= label_tag "Lien HelloAsso : " %> <br>
      lien pour page faire don à renseigner ici
    </div>
  </div>
  <div class="row text-center py-3">
    <div class="col">
      <%= f.submit 'Valider les modifications', class: "btn btn-primary" %>      
    </div>
  </div>
  <% end %>
  <div class="row py-3">
    <div class="col text-center">
      <hr class="pb-3">
      <p>Pour supprimer le compte de cette association ainsi que ses informations, cliquer ici : </p>
      <% if current_user && current_user.admin == true %>
      <%= link_to "Supprimer",association_path(@association.id), method: :delete, data: {confirm: "Etes vous surs? L'association sera définitevement supprimée"}, class: 'btn btn-outline-primary' %>
      <%end%>
    </div>
  </div>
