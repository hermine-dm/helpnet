<div style="background: linear-gradient(to right, #fff, rgba(251, 216, 190, 0.8)); min-height: 100%">
  <div class="d-flex justify-content-center fluid-container">
    <div class= "container d-flex justify-content-center" >
      <div class=" d-flex flex-column form" style="padding: 2rem  4rem  2rem 4rem">
          <h2 class="title-color pt-1">Lib√©rez la parole ! </h2>
        <h4 class="m-3">Connexion</h4>


          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :votre_email %><br/>
              <div class="border rounded p-1">
                <span class="fa fa-user errspan ml-1"></span>
                <%= f.email_field :email, autocomplete: "email", :class=> 'noborder' %>
              </div>
            </div>

            <div class="field">
              <%= f.label :mot_de_passe %><br/>
              <div class="border rounded errspan p-1" style="border-radius: 25px;">
                <i class="fas fa-unlock-alt ml-1"></i>
                <%= f.password_field :password, autocomplete: "current-password", :class=> 'noborder' %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :se_souvenir_de_moi %>
              </div>
            <% end %>
          
            <div class="actions">
              <%= f.submit "Se Connecter", :class=> 'btn btn-primary m-2' %>
            </div>
          <% end %>
          <div style="font-size: 10px;">
              <p>Vous n'avez pas encore de compte ? <%= render "devise/shared/links" %> </p>
          </div>
      </div>
    </div>
  </div>
</div>

