<div style="background: linear-gradient(to right, #fff, rgba(251, 216, 190, 0.8)); min-height: 100%">
  <div class="d-flex justify-content-center fluid-container" >
    <div class= "container d-flex justify-content-center" >
      <div class=" d-flex flex-column form" style="padding: 3rem 5rem 3rem 5rem">
        <h2 class="title-color pt-1">Libérez la parole ! </h2>
        <h5 class="m-2">Créez votre compte</h5>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :votre_email %>
            <div class="border rounded p-1 flex-row d-flex align-items-center">
              <span class="fa fa-user errspan pl-1 pr-2"></span>
               <%= f.email_field :email, autocomplete: "email", :class=> 'noborder flex-fill' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :mot_de_passe %>
            <% if @minimum_password_length %>
            <em style="font-size: 12px">(<%= @minimum_password_length %> caractères minimum)</em>
            <% end %>
            <div class="border rounded p-1 flex-row d-flex align-items-center">
                <span class="fas fa-unlock-alt errspan pl-1 pr-2"></span>
                <%= f.password_field :password, autocomplete: "new-password", :class=> 'noborder flex-fill' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :confirmer_votre_mot_de_passe %>
            <div class="border rounded p-1 flex-row d-flex align-items-center">
              <span class="fas fa-unlock-alt errspan pl-1 pr-2"></span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=> 'noborder flex-fill' %>
            </div>  
          </div>
          <p style="font-size: 8px;">En vous inscrivant, vous acceptez les <a href="https://media.giphy.com/media/q8pghZNgAQ0rm/giphy.gif" target="_blank"> conditions générales d'utilisations.</a></p>

          <div class="actions">
            <%= f.submit "Rejoindre la communauté", :class=> 'btn btn-primary' %>
          </div>
          <% end %>

          <div style="font-size: 10px;">
              <p>Vous avez déjà un compte ? <%= render "devise/shared/links" %></p>
          </div>
      </div>
    </div>
  </div>
</div>
