<div class="container-fluid py-5 bg-orange-gradient">
  <h1 class="text-center">Modifier les informations</h1>
</div>
<div class="container d-flex justify-content-center ">
<div class="col-md-8 order-md-1">
<%= form_for [@organization, @event] do |f| %>
  <div class="mb-3">
    <%= label_tag "Titre de l'évènement*" %> <br/>
    <%= f.text_field :title, class: "form-control", placeholder: "Titre"%>
    <div class="invalid-feedback" style="width: 100%;"> Ce champs est obligatoire </div>
  </div>
  <div class="mb-3">
    <%= label_tag "Description de l'évènement*" %> <br/>
    <%= f.text_area :description, class: "form-control"%>
    <div class="invalid-feedback" style="width: 100%;"> Ce champs est obligatoire</div>
  </div>
  <div class="mb-3">
    <%= label_tag "Début de l'évènement*" %> <br/>
    <%= f.datetime_select :start_date, class: "form-control"%>
    <div class="invalid-feedback" style="width: 100%;"> Ce champs est obligatoire</div>
  </div>
  <div class="mb-3">
    <%= label_tag "Fin de l'évènement" %> <br/>
    <%= f.datetime_select :end_date, class: "form-control"%>
    <div class="invalid-feedback" style="width: 100%;"> Ce champs est obligatoire</div>
  </div>
  <div class="mb-3">
    <%= fields_for @address do |ff| %>
      <%= label_tag "Lieu de l'évènement"%>
      <div class="row mb-1">
        <div class="col">
          <%= ff.text_field :number, class: "form-control", placeholder: "N°" %>
        </div>
        <div class="col">
          <%= ff.text_field :street, class: "form-control", placeholder: "Voie" %>
        </div>
      </div>
      <div class="row mb-1">
        <div class="col">
          <%= ff.text_field :additionnal_information, class: "form-control", placeholder: "Complément d'adresse"%>
        </div>
      </div>
      <div class="row mb-1">
        <div class="col">
        <%= ff.text_field :zip_code, class: "form-control", placeholder: "Code postal" %>
      </div>
      <div class="col">
        <%= ff.text_field :city, class: "form-control", placeholder: "Ville"%>
      </div>
      </div>
      <%end%>
    </div>
    <div class="mb-3">
      <%= label_tag "Ajoutez une photo à l'évènement"%><br/>
      <%= f.file_field :illustration%>
    </div>
    <div class="mb-3">
      <%= f.submit "Modifier l'évènement", class: 'btn btn-primary btn-lg'  %>
    </div>
    <br/>
  <% end %>
</div>
</div>