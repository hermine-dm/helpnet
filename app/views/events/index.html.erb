<h1 class="d-flex justify-content-center mt-5">Les évènements à venir</h1>
<div class="container">
  <div class="card-deck mt-3">
    <% @events.each do |event| %>
          <div class="col-md-4 mt-4">
            <div class="card h-100">
              <%if event.illustration.attached?%>
                <%= image_tag event.illustration, class:"card-img-top"%>
              <%else%>
                <%= image_tag "event.jpg", class:"card-img-top"%>
              <%end%>
              <div class="card-body d-flex flex-row">
                <div class="col-md-8 d-flex flex-column justify-content-center">
                  <h4 class="card-title self-align-top"> <%= event.title %> </h4>
                  <p class="card-text"> <%= event.description %>
                </div>
              </div>
              <div class="card-footer d-flex justify-content-between">
                <div class="btn btn-primary"> <%= link_to "En savoir plus", organization_event_path(event.organization_id,event.id), :class => "text-white" %>
                </div>
              </div>
            </div>
          </div> 
    <% end %>
  </div>
</div>