<div class="container-fluid py-5 bg-light">
  <br>
</div>

<div class="container mt-n5">
  <div class="row">
    <div class="col-md-2 text-center">


      <%if @organization.logo.attached?%>
        <%= image_tag @organization.logo, alt: 'logo', class:"rounded-circle", height:"120", width:"150" %>
      <%else%>
       <img class="rounded-circle" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSnybl2dND6AAjhk2HYuG9m8-Wt-jsPWnil6A89n1F7uMGEZ3b2" alt="" width="150" height="150">
      <%end%>

    </div>
    <div class="col-md-6 text-center text-md-left">
      <h1> <%= @organization.name %> </h1>
      <p><%= @organization.description %></p>
    </div>
    <div class="col-md-4 text-center text-md-right">
      <% if current_user && current_user.admin == true %>
        <%= link_to "Editer infos", edit_organization_path(@organization.id), class: 'btn btn-primary' %>
      <%end%>
      <%if current_user%>
        <% @follow = Follow.find_by(user_id:current_user.id, organization_id:@organization.id)%>
        <%if @follow == nil%>
          <a class="btn btn-secondary" <%= link_to "Suivre", organization_follows_path(@organization.id), method: :post %></a>
        <%else%>
          <a class="btn btn-secondary" <%= link_to "Ne plus suivre", organization_follow_path(@organization.id, @follow.id), method: :delete %></a>
        <%end%>
      <%else%>
          <a class="btn btn-secondary" <%= link_to "Suivre", new_user_session_path%></a>
      <%end%>
    </div>
  </div>

<div class="row py-3">
  <div class="col py-3 text-center">
    <h2 class="pb-3">
      Description :
    </h2>
    <p> <%= @organization.content %> </p>
  </div>
</div>
</div>

<div class="container-fluid bg-light py-3">
    <div class="container">
    <div class="row text-center">
      <div class="col py-3">
        <h2>
          Nous Contacter :
        </h2>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="col-md-3">
        <p> <%= @organization.location %> </p>
        <p> <%= @organization.zip_code %> </p>
        <p> <%= @organization.phone %> </p>
      </div>
    <div class="col-md-3">
      <% unless @organization.email.nil? %>
      <div class=""> <%= link_to @organization.email, @organization.email%> </div>
      <%end%>
      <% unless @organization.website.nil? %>
      <div class=""> <%= link_to @organization.website, @organization.website%> </div>
      <%end%>
      <% unless @organization.fb_website.nil? %>
      <div class=""> <i class="fab fa-facebook-f">  </i> <%= link_to "Notre Facebook", @organization.fb_website %> </div>
      <%end%>
    </div>
  </div>
  </div>
  </div>

  <div class="container">
  <div class="row py-3">
    <div class="col text-center">
      <h2 class="py-3"> Nous soutenir : </h2>
      <p> <%= @organization.description %> </p>
      <%= link_to 'Faire un don', @organization.donate_link, class: 'btn btn-primary my-3' %>
    </div>
  </div>
