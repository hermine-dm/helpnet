<h1 class="d-flex justify-content-center mt-5">Nos associations partenaires</h1>
<div class="container">
  <div class="card-deck mt-3">
    <% @organizations.each do |organization| %>
          <div class="col-md-6 mt-4">
            <div class="card h-100">
              <div class="card-body d-flex flex-row">
                <div class="col-md-4 d-flex flex-column justify-content-center">
                  <%= image_tag("#{organization.logo_url}", size: "100x100", class: "rounded-circle mb-2", alt: "Logo Asso")%>                
                  <div class="row pl-2"><i class="fas fa-map-marked-alt pr-1"> </i><%= organization.location %></div>
                </div>
                <div class="col-md-8 d-flex flex-column justify-content-center">
                  <h4 class="card-title self-align-top"> <%= organization.name %> </h4>
                  <p class="card-text"> <%= organization.description %>
                </div>
              </div>
              <div class="card-footer d-flex justify-content-center">
                <div class="btn btn-primary"> <%= link_to "En savoir plus", organization_path(organization.id), :class => "text-white" %>  </div>
              </div>
            </div>
          </div>
        
    <% end %>
  </div>
  <div class="d-flex flex-row justify-content-center mt-5">
    <% if current_user && current_user.admin == true %>
      <div class="btn btn-primary "> <%= link_to "Ajouter une nouvelle association", new_organization_path(), :class => "text-white" %>  </div>
    <%end%>
  </div>
</div>