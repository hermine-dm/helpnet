<h1 class="d-flex justify-content-center mt-5">Les publications de nos membres</h1>
<div class="container">
  <div class="card-deck my-3">
    <% @articles.each do |article| %>
      <%= render 'articles/article_card', article: article%>
    <% end %>
  </div>
  <div class="d-flex flex-row justify-content-center mt-5">
    <% if current_user && current_user.organization.nil? == false %>
      <%= link_to "Ajouter un nouvel article", new_article_path(), :class => " btn btn-primary text-white" %>
    <%end%>
  </div>
</div>