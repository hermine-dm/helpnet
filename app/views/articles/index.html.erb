<h1 class="d-flex justify-content-center mt-5">Les publications de nos membres</h1>
<div class="container">
  <div class="card-deck mt-3">
    <% @articles.each do |article| %>
          <div class="col-md-6 mt-4">
            <div class="card h-100">
              <div class="card-body d-flex flex-row">
                <div class="col-md-4 d-flex flex-column justify-content-center">
                  <%if User.find(article.user_id).avatar.attached?%>
                    <%= image_tag User.find(article.user_id).avatar, alt: 'avatar', class:"rounded-circle", height:"120", width:"120"%>
                  <%else%>
                    <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSg6Tiu7ix5m4sH3bRK550_NoTJLhA99xzuq9IsxLbtnQEDBGNi", alt:"", class:"rounded-circle", height:"120", width:"120" %>
                  <%end%>
                  <div class="row pl-2">Auteur: <%= User.find(article.user_id).name %></div>
                </div>
                <div class="col-md-8 d-flex flex-column justify-content-center">
                  <h4 class="card-title self-align-top"> <%= article.title %> </h4>
                </div>
              </div>
              <div class="card-footer d-flex justify-content-between">
                <%= link_to "En savoir plus", article_path(article.id), :class => "btn btn-primary text-white" %>
                <%if current_user%>
                  <% @like = ArticleLike.find_by(user_id:current_user.id, article_id:article.id)%>
                  <%if @like == nil%>
                    <%= link_to "Like", article_article_likes_path(article.id), method: :post, :class => "text-dark" %>
                  <%else%>
                   <%= link_to "Unlike", article_article_like_path(article.id, @like.id), method: :delete, :class => "text-muted" %>
                  <%end%>
                <%else%>
                  <%= link_to "Like", new_user_session_path, :class => "text-dark"%>
                <%end%>
              </div>
            </div>
          </div>
    <% end %>
  </div>
  <div class="d-flex flex-row justify-content-center mt-5">
    <% if current_user && current_user.organization.nil? == false %>
      <%= link_to "Ajouter un nouvel article", new_article_path(), :class => " btn btn-primary text-white" %>
    <%end%>
  </div>
</div>