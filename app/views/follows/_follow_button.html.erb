<% @follow = Follow.find_by(user_id:current_user.id, organization_id: organization.id)%>
<%if @follow == nil%>
    <%= link_to "Suivre", organization_follows_path(organization.id), method: :post, remote:true, :class => "btn btn-outline-secondary"  %>
<%else%>
    <%= link_to "Ne plus suivre", organization_follow_path(organization.id, @follow.id), method: :delete, remote:true, :class => "btn btn-outline-secondary" %>
<%end%>